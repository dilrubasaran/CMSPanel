@model List<UserListViewModel>

<div class="container py-4">
	<div class="row mb-4">
		<div class="col-md-6">
			<h2 class="mb-0">
				<i class="bi bi-people-fill me-2"></i>
				Kullanıcı Listesi
			</h2>
		</div>
		<div class="col-md-6 text-end">
			<a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="SignUp">
				<i class="bi bi-person-plus-fill"></i>
				Yeni Kullanıcı Ekle
			</a>
		</div>
	</div>

	<div class="card shadow-sm">
		<div class="card-body p-0">
			<div class="table-responsive">
				<table class="table table-hover align-middle mb-0">
					<thead class="bg-light">
						<tr>
							<th class="px-4">Kullanıcı Adı</th>
							<th>Email</th>
							<th>Roller</th>
							<th class="text-end px-4">İşlemler</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td class="px-4">
									<div class="d-flex align-items-center">
										<div class="avatar me-3">
											<div class="avatar-initial rounded-circle bg-primary">
												@item.Name.Substring(0,1).ToUpper()
											</div>
										</div>
										<div>@item.Name</div>
									</div>
								</td>
								<td>
									<i class="bi bi-envelope me-2 text-muted"></i>
									@item.Email
								</td>
								<td>
									<user-role-names user-id="@item.Id"></user-role-names>
								</td>
								<td class="text-end px-4">
									<a class="btn btn-primary btn-sm" asp-area="Admin" asp-controller="Role" asp-action="AssignRoleToUser" asp-route-id="@item.Id">
										<i class="bi bi-person-fill-gear"></i>
										Rol Ata
									</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<style>
	.avatar {
		width: 38px;
		height: 38px;
	}

	.avatar-initial {
		width: 38px;
		height: 38px;
		display: flex;
		align-items: center;
		justify-content: center;
		color: white;
		font-weight: 500;
	}

	.table > :not(caption) > * > * {
		padding: 1rem 0.5rem;
	}

	.table thead th {
		font-weight: 600;
		text-transform: uppercase;
		font-size: 0.85rem;
		letter-spacing: 0.5px;
	}

	.btn-sm {
		padding: 0.4rem 1rem;
	}

	.card {
		border: none;
		border-radius: 0.5rem;
	}

	.table-responsive {
		border-radius: 0.5rem;
	}
</style>