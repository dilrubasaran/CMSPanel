@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MenuAddViewModel

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Yeni Menü Ekle</h3>
    </div>
    <div class="card-body">
       

        <form asp-action="MenuAdd" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Icon" class="form-label"></label>
                <input asp-for="Icon" class="form-control" />
                <span asp-validation-for="Icon" class="text-danger"></span>
                <small class="text-muted">Örnek: bi bi-house</small>
            </div>
            <div class="mb-3">
	            <label asp-for="AreaName" class="form-label"></label>
	            <input asp-for="AreaName" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="ControllerName" class="form-label"></label>
                <input asp-for="ControllerName" class="form-control" />
                <span asp-validation-for="ControllerName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ActionName" class="form-label"></label>
                <input asp-for="ActionName" class="form-control" />
                <span asp-validation-for="ActionName" class="text-danger"></span>
            </div>
          

            <div class="mb-3">
                <label asp-for="ParentId" class="form-label">Üst Menü</label>
                <select asp-for="ParentId" class="form-select" asp-items="@(new SelectList(Model.ParentMenus, "Id", "Name"))">
                    <option value="">Ana Menü</option>
                </select>
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label"></label>
                <select asp-for="Role" class="form-select" asp-items="@(new SelectList(Model.Roles))">
	                <option value=""> Role seçin </option>
                   
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SortNumber" class="form-label"></label>
                <input asp-for="SortNumber" class="form-control" type="number" />
            </div>

            <div class="text-end">
                <a  class="btn btn-secondary">İptal</a>
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 