@model List<RoleViewModel>
@{
    ViewData["Title"] = "Root Admin Panel";
}

<div class="container">
    <h2>Root Admin Yönetim Paneli</h2>
    
    <div class="mb-3">
        <a asp-action="RoleCreate" class="btn btn-primary">Yeni Rol Oluştur</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Rol Adı</th>
                <th>Yetki Seviyesi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>@role.PermissionLevel</td>
                    <td>
                        <a asp-action="RoleUpdate" asp-route-id="@role.Id" class="btn btn-warning">Güncelle</a>
                        <a asp-action="RoleDelete" asp-route-id="@role.Id" class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4">
        <h3>Kullanıcı Rolleri</h3>
        <a asp-controller="Home" asp-action="UserList" class="btn btn-info">Kullanıcı Listesine Git</a>
    </div>
</div> 