@{
    ViewData["Title"] = "Öğrenci Dashboard";
}

<div class="container-fluid">
    <!-- 2.1 Kişisel Gelişim Planı -->
    <div class="row g-4 mb-4">
        <div class="col-sm-6 col-xl-3">
            <div class="card text-white bg-primary">
                <div class="card-body pb-0 d-flex justify-content-between align-items-start">
                    <div>
                        <div class="fs-4 fw-semibold">
                            75%
                            <span class="fs-6 fw-normal">
                                (+5% gelişim
                                <svg class="icon">
                                    <use xlink:href="@Url.Content("~/assets/icons/free.svg")#cil-arrow-top"></use>
                                </svg>)
                            </span>
                        </div>
                        <div>Genel Gelişim</div>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-transparent text-white p-0" type="button" data-coreui-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <svg class="icon">
                                <use xlink:href="@Url.Content("~/assets/icons/free.svg")#cil-options"></use>
                            </svg>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item" href="#">Detaylar</a>
                            <a class="dropdown-item" href="#">Rapor</a>
                        </div>
                    </div>
                </div>
                <div class="c-chart-wrapper mt-3 mx-3" style="height: 70px;">
                    <canvas class="chart" id="card-chart1" height="70"></canvas>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-xl-3">
            <div class="card text-white bg-info">
                <div class="card-body pb-0 d-flex justify-content-between align-items-start">
                    <div>
                        <div class="fs-4 fw-semibold">
                            3
                            <span class="fs-6 fw-normal">
                                (+1 yeni
                                <svg class="icon">
                                    <use xlink:href="@Url.Content("~/assets/icons/free.svg")#cil-arrow-top"></use>
                                </svg>)
                            </span>
                        </div>
                        <div>Aktif Kurslar</div>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-transparent text-white p-0" type="button" data-coreui-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <svg class="icon">
                                <use xlink:href="@Url.Content("~/assets/icons/free.svg")#cil-options"></use>
                            </svg>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item" href="#">Detaylar</a>
                            <a class="dropdown-item" href="#">Rapor</a>
                        </div>
                    </div>
                </div>
                <div class="c-chart-wrapper mt-3 mx-3" style="height: 70px;">
                    <canvas class="chart" id="card-chart2" height="70"></canvas>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-xl-3">
            <div class="card text-white bg-warning">
                <div class="card-body pb-0 d-flex justify-content-between align-items-start">
                    <div>
                        <div class="fs-4 fw-semibold">
                            45
                            <span class="fs-6 fw-normal">
                                (+5 saat
                                <svg class="icon">
                                    <use xlink:href="@Url.Content("~/assets/icons/free.svg")#cil-arrow-top"></use>
                                </svg>)
                            </span>
                        </div>
                        <div>Haftalık Çalışma Saati</div>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-transparent text-white p-0" type="button" data-coreui-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <svg class="icon">
                                <use xlink:href="@Url.Content("~/assets/icons/free.svg")#cil-options"></use>
                            </svg>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item" href="#">Detaylar</a>
                            <a class="dropdown-item" href="#">Rapor</a>
                        </div>
                    </div>
                </div>
                <div class="c-chart-wrapper mt-3" style="height: 70px;">
                    <canvas class="chart" id="card-chart3" height="70"></canvas>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-xl-3">
            <div class="card text-white bg-success">
                <div class="card-body pb-0 d-flex justify-content-between align-items-start">
                    <div>
                        <div class="fs-4 fw-semibold">
                            85%
                            <span class="fs-6 fw-normal">
                                (+3%
                                <svg class="icon">
                                    <use xlink:href="@Url.Content("~/assets/icons/free.svg")#cil-arrow-top"></use>
                                </svg>)
                            </span>
                        </div>
                        <div>Başarı Oranı</div>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-transparent text-white p-0" type="button" data-coreui-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <svg class="icon">
                                <use xlink:href="@Url.Content("~/assets/icons/free.svg")#cil-options"></use>
                            </svg>
                        </button>
                        <div class="dropdown-menu dropdown-menu-end">
                            <a class="dropdown-item" href="#">Detaylar</a>
                            <a class="dropdown-item" href="#">Rapor</a>
                        </div>
                    </div>
                </div>
                <div class="c-chart-wrapper mt-3 mx-3" style="height: 70px;">
                    <canvas class="chart" id="card-chart4" height="70"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- 2.2 Kurs Takibi -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Kurs İlerleme Durumu</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="c-chart-wrapper" style="height: 300px;">
                        <canvas class="chart" id="course-progress-chart" height="300"></canvas>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title">Kurs Tamamlanma Oranları</h6>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Kurs</th>
                                            <th>İlerleme</th>
                                            <th>Durum</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Web Geliştirme</td>
                                            <td>85%</td>
                                            <td><span class="badge bg-success">İyi</span></td>
                                        </tr>
                                        <tr>
                                            <td>Mobil Uygulama</td>
                                            <td>65%</td>
                                            <td><span class="badge bg-warning">Orta</span></td>
                                        </tr>
                                        <tr>
                                            <td>Veri Bilimi</td>
                                            <td>45%</td>
                                            <td><span class="badge bg-danger">Geliştirilmeli</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
	
    <div class="card mb-4">

        <div class="card-body">
            <div class="d-flex justify-content-between">
                <div>
                    <h4 class="card-title mb-0">Kurs İlerleme Durumu </h4>
                    <div class="small text-body-secondary">Ocak-Temmuz 2023</div>
                </div>
                <div class="btn-toolbar d-none d-md-block" role="toolbar" aria-label="Toolbar buton">
                    <div class="btn-group btn-group-toggle mx-3" data-coreui-toggle="buttons">
                        <input class="btn-check" id="option1" type="radio" name="options" autocomplete="off">
                        <label class="btn btn-outline-secondary"> Gün</label>
                        <input class="btn-check" id="option2" type="radio" name="options" autocomplete="off" checked="">
                        <label class="btn btn-outline-secondary active"> Ay</label>
                        <input class="btn-check" id="option3" type="radio" name="options" autocomplete="off">
                        <label class="btn btn-outline-secondary"> Yıl</label>
                    </div>
                    <button class="btn btn-primary" type="button">
                        <svg class="icon">
                            <use xlink:href="@Url.Content("~/assets/icons/free.svg")#cil-cloud-download"></use>
                        </svg>
                    </button>
                </div>
            </div>
            <div class="c-chart-wrapper" style="height: 300px; margin-top: 40px;">
                <canvas class="chart" id="main-chart" height="450" width="1060" style="display: block; box-sizing: border-box; height: 300px; width: 707px;"></canvas>
            </div>
        </div>

        @* //Todo: TRAFFİC alt yüzdeler  *@
        <div class="card-footer">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-4 row-cols-xl-5 g-4 mb-2 text-center">
                <div class="col">
                    <div class="text-body-secondary">Ders Katılımı</div>
                    <div class="fw-semibold text-truncate">45/50 Ders (%90)</div>
                    <div class="progress progress-thin mt-2">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 90%" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="col">
                    <div class="text-body-secondary">Ödev Tamamlama</div>
                    <div class="fw-semibold text-truncate">12/15 Ödev (%80)</div>
                    <div class="progress progress-thin mt-2">
                        <div class="progress-bar bg-info" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="col">
                    <div class="text-body-secondary">Quiz Başarısı</div>
                    <div class="fw-semibold text-truncate">8/10 Quiz (%80)</div>
                    <div class="progress progress-thin mt-2">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="col">
                    <div class="text-body-secondary">Proje Tamamlama</div>
                    <div class="fw-semibold text-truncate">3/4 Proje (%75)</div>
                    <div class="progress progress-thin mt-2">
                        <div class="progress-bar bg-danger" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
                <div class="col d-none d-xl-block">
                    <div class="text-body-secondary">Genel Başarı</div>
                    <div class="fw-semibold text-truncate">%85</div>
                    <div class="progress progress-thin mt-2">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: 85%" aria-valuenow="85" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- 2.3 Zaman Takibi -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Çalışma Zamanı Analizi</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="c-chart-wrapper" style="height: 300px;">
                        <canvas class="chart" id="time-analysis-chart" height="300"></canvas>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h6 class="card-title">Haftalık Çalışma Dağılımı</h6>
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Kurs</th>
                                            <th>Saat</th>
                                            <th>Oran</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Web Geliştirme</td>
                                            <td>15</td>
                                            <td>
                                                <div class="progress progress-thin">
                                                    <div class="progress-bar bg-primary" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Mobil Uygulama</td>
                                            <td>8</td>
                                            <td>
                                                <div class="progress progress-thin">
                                                    <div class="progress-bar bg-info" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Veri Bilimi</td>
                                            <td>7</td>
                                            <td>
                                                <div class="progress progress-thin">
                                                    <div class="progress-bar bg-warning" role="progressbar" style="width: 35%" aria-valuenow="35" aria-valuemin="0" aria-valuemax="100"></div>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 2.4 Başarı İstatistikleri -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title mb-0">Başarı İstatistikleri</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h6>Sınav Sonuçları</h6>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Sınav</th>
                                    <th>Puan</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Web Geliştirme Final</td>
                                    <td>85/100</td>
                                    <td><span class="badge bg-success">Başarılı</span></td>
                                </tr>
                                <tr>
                                    <td>Mobil Uygulama Ara Sınav</td>
                                    <td>75/100</td>
                                    <td><span class="badge bg-warning">Orta</span></td>
                                </tr>
                                <tr>
                                    <td>Veri Bilimi Quiz</td>
                                    <td>90/100</td>
                                    <td><span class="badge bg-success">Başarılı</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-md-6">
                    <h6>Gelişim Alanları</h6>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Alan</th>
                                    <th>Seviye</th>
                                    <th>Öneri</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Frontend Geliştirme</td>
                                    <td>İyi</td>
                                    <td>İleri seviye kurslara geç</td>
                                </tr>
                                <tr>
                                    <td>Backend Geliştirme</td>
                                    <td>Orta</td>
                                    <td>Pratik yap ve tekrar et</td>
                                </tr>
                                <tr>
                                    <td>Veri Analizi</td>
                                    <td>Geliştirilmeli</td>
                                    <td>Temel kavramları tekrar et</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Kurs İlerleme Grafiği
        const courseProgressChart = new Chart(document.getElementById('course-progress-chart'), {
            type: 'line',
            data: {
                labels: ['Ocak', 'Şubat', 'Mart', 'Nisan', 'Mayıs', 'Haziran'],
                datasets: [
                    {
                        label: 'Web Geliştirme',
                        data: [30, 45, 60, 75, 85, 90],
                        borderColor: '#4e73df',
                        backgroundColor: 'rgba(78, 115, 223, 0.1)',
                        tension: 0.3
                    },
                    {
                        label: 'Mobil Uygulama',
                        data: [20, 35, 45, 55, 65, 70],
                        borderColor: '#36b9cc',
                        backgroundColor: 'rgba(54, 185, 204, 0.1)',
                        tension: 0.3
                    },
                    {
                        label: 'Veri Bilimi',
                        data: [15, 25, 35, 40, 45, 50],
                        borderColor: '#1cc88a',
                        backgroundColor: 'rgba(28, 200, 138, 0.1)',
                        tension: 0.3
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100
                    }
                }
            }
        });

        // Zaman Analizi Grafiği
        const timeAnalysisChart = new Chart(document.getElementById('time-analysis-chart'), {
            type: 'bar',
            data: {
                labels: ['Pazartesi', 'Salı', 'Çarşamba', 'Perşembe', 'Cuma', 'Cumartesi', 'Pazar'],
                datasets: [
                    {
                        label: 'Çalışma Saati',
                        data: [6, 8, 7, 5, 9, 4, 6],
                        backgroundColor: '#4e73df',
                        borderColor: '#4e73df',
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Saat'
                        }
                    }
                }
            }
        });
    </script>
} 