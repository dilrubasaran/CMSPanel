<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Identity Learn</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/identity_singup.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Navbar stili */
        .navbar {
            position: fixed;
            top: 0;
            right: 0;
            left: 0;
            height: 56px;
            z-index: 1030;
            background-color: #fff;
        }

        /* Ana container stili */
        .page-container {
            display: flex;
            margin-top: 56px;
            min-height: calc(100vh - 56px);
        }

        /* Sidebar stili */
        .sidebar {
            width: 250px;
            background-color: #42474d;
            position: fixed;
            top: 56px;
            left: 0;
            bottom: 0;
            display: flex;
            flex-direction: column;
            z-index: 1020;
            transition: transform 0.3s ease;
        }

        /* Sidebar içerik */
        .sidebar-content {
            flex: 1;
            overflow-y: auto;
            padding-top: 1rem;
        }

        /* Sidebar footer */
        .sidebar-footer {
            padding: 1rem;
            border-top: 1px solid rgba(255,255,255,0.1);
        }

        /* Ana içerik alanı */
        .main-content {
            flex: 1;
            margin-left: 250px;
            padding: 20px;
            width: calc(100% - 250px);
            transition: margin-left 0.3s ease, width 0.3s ease;
        }

        .main-content-full {
            margin-left: 0;
            width: 100%;
        }

        /* Sidebar link stilleri */
        .sidebar .nav-link {
            color: rgba(255,255,255,.8);
            padding: 0.8rem 1rem;
            transition: all 0.3s;
        }

        .sidebar .nav-link:hover {
            color: #fff;
            background: rgba(255,255,255,.1);
        }

        .sidebar .nav-link.active {
            color: #fff;
            background: #0d6efd;
        }

        /* Alt menü stilleri */
        .sidebar .nav-link[data-bs-toggle="collapse"] {
            position: relative;
        }

        .sidebar .nav-link[data-bs-toggle="collapse"]::after {
            content: '\F282';
            font-family: 'bootstrap-icons';
            position: absolute;
            right: 1rem;
            transition: transform 0.3s;
        }

        .sidebar .nav-link[data-bs-toggle="collapse"][aria-expanded="true"]::after {
            transform: rotate(180deg);
        }

        /* Footer stili */
        .footer {
            margin-top: auto;
            background-color: #f8f9fa;
            padding: 1rem 0;
        }

        /* Responsive tasarım */
        @@media (max-width: 768px) {
            .sidebar {
                transform: translateX(-100%);
            }

            .sidebar.show {
                transform: translateX(0);
            }

            .main-content {
                margin-left: 0;
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow">
        <div class="container-fluid">
            @if (User.Identity.IsAuthenticated)
            {
                <button class="navbar-toggler border-0 me-2" type="button" id="sidebar-toggle">
                    <span class="navbar-toggler-icon"></span>
                </button>
            }
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Identity Learn</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarContent">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    </li>
                    @if (User.IsInRole("Root Admin"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Admin" asp-controller="Role" asp-action="RootAdminPanel">Root Admin Panel</a>
                        </li>
                    }
                </ul>
                <partial name="_NavbarLogin" />
            </div>
        </div>
    </nav>

    <div class="page-container">
        <!-- Sidebar -->
        @if (User.Identity.IsAuthenticated)
        {
            <div class="sidebar">
                <div class="sidebar-content">
                    @await Component.InvokeAsync("Sidebar")
                </div>
                <div class="sidebar-footer">
                    <a class="btn btn-danger w-100" asp-area="" asp-controller="Member" asp-action="Logout">
                        <i class="bi bi-box-arrow-right"></i> Çıkış Yap
                    </a>
                </div>
            </div>
        }

        <!-- Ana İçerik -->
        <div class="@(User.Identity.IsAuthenticated ? "main-content" : "main-content-full")">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @RenderBody()

            <footer class="footer border-top text-muted">
                <div class="container">
                    &copy; 2025 - Identity Learn
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        Sidebar toggle işlevi
        document.getElementById('sidebar-toggle')?.addEventListener('click', function() {
            document.querySelector('.sidebar')?.classList.toggle('show');
        });

        // Responsive davranış
        window.addEventListener('resize', function() {
            if (window.innerWidth > 768) {
                document.querySelector('.sidebar')?.classList.remove('show');
            }
        });

        // Alt menülerin aktif durumunu kontrol et
        document.querySelectorAll('.sidebar .collapse').forEach(collapse => {
            collapse.addEventListener('show.bs.collapse', function() {
                this.previousElementSibling.setAttribute('aria-expanded', 'true');
            });
            
            collapse.addEventListener('hide.bs.collapse', function() {
                this.previousElementSibling.setAttribute('aria-expanded', 'false');
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
