@{
	ViewData["Title"] = "CMS Panel";
}

<div class="container-fluid p-0">
	<div class="row g-0 min-vh-100">
		<!-- Sol taraf - Ana Panel -->
		<div class="col-12 col-lg-6 bg-primary" style="min-height: 100vh;">
			<div class="d-flex align-items-center justify-content-center h-100 p-5">
				<div class="text-center text-white">
					<div class="mb-4">
						<i class="bi bi-layers-fill" style="font-size: 5rem;"></i>
					</div>
					<h1 class="display-4 fw-bold mb-4">CMS Yönetim Paneli</h1>
					<p class="lead mb-5">Güçlü, esnek ve kullanıcı dostu içerik yönetim sistemi</p>
					<div class="row justify-content-center mt-5">
						<div class="col-4">
							<div class="feature-item text-center">
								<i class="bi bi-shield-check" style="font-size: 2.5rem;"></i>
								<h5 class="mt-3">Güvenli</h5>
							</div>
						</div>
						<div class="col-4">
							<div class="feature-item text-center">
								<i class="bi bi-lightning-charge" style="font-size: 2.5rem;"></i>
								<h5 class="mt-3">Hızlı</h5>
							</div>
						</div>
						<div class="col-4">
							<div class="feature-item text-center">
								<i class="bi bi-phone" style="font-size: 2.5rem;"></i>
								<h5 class="mt-3">Responsive</h5>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- Sağ taraf - Giriş Alanı -->
		<div class="col-12 col-lg-6 bg-white">
			<div class="d-flex align-items-center justify-content-center h-100 p-5">
				<div class="w-100" style="max-width: 450px;">
					<div class="text-center mb-5">
						<h2 class="display-6 fw-bold text-primary mb-3">Hoş Geldiniz</h2>
						<p class="text-muted">CMS Panelinize giriş yaparak içeriklerinizi yönetmeye başlayabilirsiniz.</p>
					</div>

					<!-- Rol Bazlı Kartlar -->
					<div class="row g-4 mb-5">
						<div class="col-md-4">
							<div class="card h-100 border-0 shadow-hover">
								<div class="card-body text-center p-4">
									<div class="icon-box mb-3">
										<i class="bi bi-shield-lock text-primary" style="font-size: 2rem;"></i>
									</div>
									<h5 class="card-title mb-2">Admin Paneli</h5>
									<p class="card-text small text-muted">Tüm sistem yönetimi ve kullanıcı kontrolü</p>
									<a href="/Admin/Home/Dashboard" class="btn btn-outline-primary btn-sm mt-2 stretched-link">Yönet</a>
								</div>
							</div>
						</div>
						<div class="col-md-4">
							<div class="card h-100 border-0 shadow-hover">
								<div class="card-body text-center p-4">
									<div class="icon-box mb-3">
										<i class="bi bi-mortarboard text-primary" style="font-size: 2rem;"></i>
									</div>
									<h5 class="card-title mb-2">Eğitmen Paneli</h5>
									<p class="card-text small text-muted">Ders ve öğrenci yönetimi</p>
									<a href="/Instructor/Home/Dashboard" class="btn btn-outline-primary btn-sm mt-2 stretched-link">Erişim</a>
								</div>
							</div>
						</div>
						<div class="col-md-4">
							<div class="card h-100 border-0 shadow-hover">
								<div class="card-body text-center p-4">
									<div class="icon-box mb-3">
										<i class="bi bi-person-workspace text-primary" style="font-size: 2rem;"></i>
									</div>
									<h5 class="card-title mb-2">Öğrenci Paneli</h5>
									<p class="card-text small text-muted">Dersler ve öğrenim yönetimi</p>
									<a href="/Student/Home/Dashboard" class="btn btn-outline-primary btn-sm mt-2 stretched-link">Giriş</a>
								</div>
							</div>
						</div>
					</div>

					<!-- Giriş/Kayıt Butonları -->
					<div class="d-grid gap-3 mt-4">
						<a href="/Home/SignIn" class="btn btn-primary btn-lg">
							<i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
						</a>
						<a href="/Home/SignUp" class="btn btn-light btn-lg">
							<i class="bi bi-person-plus me-2"></i>Yeni Hesap Oluştur
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<style>
	body {
		overflow-x: hidden;
	}
	.shadow-hover {
		transition: all 0.3s ease;
	}
	.shadow-hover:hover {
		transform: translateY(-5px);
		box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
	}
	.icon-box {
		width: 60px;
		height: 60px;
		border-radius: 50%;
		background: rgba(13, 110, 253, 0.1);
		display: flex;
		align-items: center;
		justify-content: center;
		margin: 0 auto;
	}
	.feature-item {
		padding: 1rem;
		border-radius: 10px;
		background: rgba(255, 255, 255, 0.1);
		backdrop-filter: blur(5px);
	}
</style>

@section Scripts {
	<script>
		document.addEventListener('DOMContentLoaded', function () {
			// Sayfa yüklenme animasyonu
			document.querySelector('.container-fluid').style.opacity = "0";
			setTimeout(() => {
				document.querySelector('.container-fluid').style.transition = "opacity 0.5s ease-in-out";
				document.querySelector('.container-fluid').style.opacity = "1";
			}, 100);
		});
	</script>
}