﻿@{
    ViewData["Title"] = "Profil Düzenle";
}

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@using Microsoft.AspNetCore.Mvc.TagHelpers
@model identity_signup.ViewModels.UserEditViewModel

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Profil Bilgilerini Güncelle</h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <form asp-controller="Member" asp-action="UserEdit" method="post" enctype="multipart/form-data">
                        <div class="row g-4">
                            <!-- Kullanıcı Adı -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="UserName" class="form-control" placeholder="Kullanıcı Adı" disabled>
                                    <label asp-for="UserName"></label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Email" class="form-control" placeholder="Email">
                                    <label asp-for="Email"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Telefon -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Phone" class="form-control" placeholder="Telefon">
                                    <label asp-for="Phone"></label>
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Doğum Tarihi -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="BirthDate" class="form-control" placeholder="Doğum Tarihi">
                                    <label asp-for="BirthDate"></label>
                                    <span asp-validation-for="BirthDate" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Şehir -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="City" class="form-control" placeholder="Şehir">
                                    <label asp-for="City"></label>
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Cinsiyet -->
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="Gender" class="form-select" asp-items="ViewBag.genderList">
                                        <option value="">Seçiniz</option>
                                    </select>
                                    <label asp-for="Gender"></label>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Profil Resmi -->
                            @* <div class="col-12">
                                <div class="mb-3">
                                    <label asp-for="Picture" class="form-label"></label>
                                    <input type="file" class="form-control" asp-for="Picture">
                                    <span asp-validation-for="Picture" class="text-danger"></span>
                                </div>
                            </div> *@

                            <!-- Butonlar -->
                            <div class="col-12 text-center">
                                <button type="submit" class="btn btn-primary btn-lg px-5">
                                    <i class="bi bi-check-circle me-2"></i>Güncelle
                                </button>
                                <a asp-controller="Member" asp-action="Index" class="btn btn-secondary btn-lg px-5 ms-2">
                                    <i class="bi bi-x-circle me-2"></i>İptal
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>